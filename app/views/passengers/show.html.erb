<% if @passenger.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <div class="passengerbox">
    <h3>Name: <%=@passenger[:name]%></h3>
    <h3>Phone Number: <%=@passenger[:phone_num]%></h3>
  </div>
<% end %>

<%= link_to "Home", homepages_path %>
<h3><%= link_to "Edit", edit_passenger_path(@passenger.id) %> </h3>
<h3><%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: { confirm: "Are you sure that you want to delete this passenger?" } %></h3>
