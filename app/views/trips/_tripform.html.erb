
<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>




<%= form_with model: @trip, class: form_class do |f| %>
    
  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :rating %>
  <%= f.select :rating, [nil,1,2,3,4,5] %>
  
  <%= f.label :price %>
  <%= f.text_field :cost %>

  <%= f.label :driver_id %>
  <%= f.select :driver_id, Driver.all.map {|d| [d.name, d.id]} %>

  <%= f.label :passenger_id %>
  <%= f.select :passenger_id, [(Passenger.find(Trip.find(params[:id]).passenger_id)).name] %>

  <%= f.submit action_name, class: "tripform__submit-btn" %>

<% end %>