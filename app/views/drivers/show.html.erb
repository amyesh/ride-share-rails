<% if @driver.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <div class="driverbox">
    <h3>Name: <%=@driver[:name]%></h3>
    <h3>Vin: <%=@driver[:vin]%></h3>
  </div>
<% end %>

<table>
  <thead>
    <td>
      ID
    </td>
    <td>
      Date
    </td>
    <td>
      Driver
    </td>
    <td>
      Passenger
    </td>
    <td>
      Price
    </td>
    <td>
      Rating
    </td>
    <td>
      Delete
    </td>
  </thead>
  <tbody>

<% @driver.trips.each do |trip| %>
  <tr>
    <td>
      <%= link_to "#{trip.id}", trip_path(trip) %>
    </td>
    &nbsp&nbsp
    <td>
      <%= trip.date %>
    </td>
    &nbsp&nbsp
    <td>
      <%= trip.driver_name %>
    </td>
    &nbsp&nbsp
    <td>
      <%= trip.passenger_name %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>


<%= link_to "Home", homepages_path %>
<h3><%= link_to "Edit", edit_driver_path(@driver.id) %> </h3>
<h3><%= link_to "Delete", driver_path(@driver.id), method: :delete, data: { confirm: "Are you sure that you want to delete this driver?" } %></h3>


